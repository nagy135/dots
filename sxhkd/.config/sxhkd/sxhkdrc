### Move to receptacle
super + ctrl + i
    bspwm_receptacle

### Close all receptacles
super + ctrl + shift + i
    for win in `bspc query -N -n .leaf.\!window`; do bspc node $win -k ; done;

### Insert receptacle
super + alt + i; {h,j,k,l}
    bspc node --presel-dir {west,south,north,east} -i

### toggle pausing of mpv on start when played from qutebrowser
super + alt + m
    mpv_pause_on_start_toggle

### recorder giph
super + shift + r
    giph -f 60 -t 3 -s -l -b 3 -p 3 -c 1,1,1,0.3 ~/$(date +%H_%M_%S).gif ; notify-send "end"

### recorder screencast STOP and CONVERT
super + ctrl + r
    record --stop

### doom emacs
super + e
    emacs_run

### terminal with tmux rofi session selector
super + shift + e
    tmux_controller list

### kill tmux session
super + ctrl + e
    tmux_controller kill

### create tmux session
super + alt + e
    tmux_controller create

### restart polybar
super + alt + b
    killall polybar ; polybar_launch
    # export XDG_CONFIG_HOME="$HOME/.config" ; start_lego

### kill golemon
super + shift + space
    kill_lego

### make sxhkd reload its configuration files
super + Escape
    pkill -USR1 -x sxhkd

### kill sxhkd
super + ctrl + Escape
    killall sxhkd

### quit bspwm normally
super + alt + Escape
    bspc quit

