    wifi_connecter

# restart wifi adapter
super + ctrl + w
    alacritty -e systemctl restart NetworkManager
    # nmcli r wifi off; nmcli r wifi on
    # kitty -e nmtui

# dunst wifi network name
super + alt + w
    wifi_status


