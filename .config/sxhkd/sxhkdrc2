# restart golemon
super + space
    export XDG_CONFIG_HOME="$HOME/.config" ; start_lego

# kill golemon
super + shift + space
    kill_lego

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# close and kill
super + ctrl + shift + w
    wifi_control_toggle

